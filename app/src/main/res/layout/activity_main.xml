<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.com.devare.nogos.MainActivity">

    <Button
        android:id="@+id/btn_alert_dialog_simple"
        style="@style/ViewsTheme.ThemeButton"
        android:text="Diálogo de Alerta Simple" />

    <Button
        android:id="@+id/btn_alert_dialog_lista_simple"
        style="@style/ViewsTheme.ThemeButton"
        android:layout_marginTop="16dp"
        android:text="Diálogo de Alerta con Lista Simple" />

    <Button
        android:id="@+id/btn_alert_dialog_lista_radiobtns"
        style="@style/ViewsTheme.ThemeButton"
        android:layout_marginTop="16dp"
        android:text="Diálogo de Alerta con Lista De Radio Buttons" />

    <Button
        android:id="@+id/btn_alert_dialog_lista_multirbtn"
        style="@style/ViewsTheme.ThemeButton"
        android:layout_marginTop="16dp"
        android:text="Diálogo de Alerta con Lista De Multi selección" />

    <Button
        android:id="@+id/btn_alert_dialog_personalizado"
        style="@style/ViewsTheme.ThemeButton"
        android:layout_marginTop="16dp"
        android:text="Diálogo de Alerta Personalizado" />


</LinearLayout>
